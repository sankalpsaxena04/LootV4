<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lootblackbg"
    android:orientation="vertical"
    tools:context="com.hackncs.zealicon.loot.Login">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backbutton"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/popinsemibold"
            android:gravity="center"
            android:text="Create an account"
            android:textColor="@color/white"

            android:textSize="25dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lootblackbg"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/popinregular"
                android:gravity="start"
                android:text="Enter your details"
                android:textColor="#BAFFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="12dp"
                android:lines="1"
                android:background="@drawable/edittext_layout_black"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:gravity="center_vertical"
                android:hint="Name"


                android:inputType="text"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white30"
                android:textColorHint="#70D6D6D6"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:lines="2"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_layout_black"
                android:drawableStart="@drawable/ic_baseline_email_24"


                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:gravity="center_vertical"
                android:hint="Email"
                android:inputType="textEmailAddress"

                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white30"

                android:textColorHint="#70D6D6D6"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/zealId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:lines="1"

                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_layout_black"


                android:drawableStart="@drawable/ic_baseline_menu_book_24"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Admission No."
                android:inputType="text"

                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white30"
                android:textColorHint="#70D6D6D6"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_layout_black"
                android:maxLength="10"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Phone"
                android:inputType="phone"

                android:lines="1"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white30"
                android:textColorHint="#70D6D6D6"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"


                android:background="@drawable/edittext_layout_black"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:lines="1"


                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="5dp"

                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white30"
                android:textColorHint="#70D6D6D6"
                android:textCursorDrawable="@null"
                android:textSize="16sp"


                />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_layout_black"
                android:drawableStart="@drawable/ic_baseline_verified_24"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:lines="1"


                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Nickname"
                android:inputType="textAutoComplete"
                android:paddingStart="5dp"
                android:paddingTop="5dp"

                android:paddingBottom="10dp"
                android:textColor="@color/white30"
                android:textColorHint="#70D6D6D6"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_1"
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/avatar_1" />

                    <ImageView
                        android:id="@+id/tick_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_2"
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/avatar_2" />

                    <ImageView
                        android:id="@+id/tick_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"

                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"

                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_3"
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/avatar_3" />

                    <ImageView
                        android:id="@+id/tick_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"

                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_4"
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/avatar_4" />

                    <ImageView
                        android:id="@+id/tick_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"

                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_5"
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/avatar_5" />

                    <ImageView
                        android:id="@+id/tick_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"

                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_6"
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/avatar_6" />

                    <ImageView
                        android:id="@+id/tick_6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"

                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/card_background_yellow"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:fontFamily="@font/popinsemibold"
                android:text="LET'S GET STARTED"
                android:textAllCaps="false"
                android:textColor="@color/white30"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>
