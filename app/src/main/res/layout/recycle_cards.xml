<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    card_view:cardElevation="5dp"

    card_view:cardBackgroundColor="#424242"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:weightSum="10"
        android:background="@drawable/orange_rectangle">


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/avatar_2"
            android:tag="image_tag" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:gravity="center_vertical|top"
            android:paddingTop="10dp"
            android:layout_weight="7"
            >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Bobby Browofwpeofkwwefwefwwefwpeoijoijoijoijowepokwpeofkweweofpkn"
                android:textColor="@color/white"
                android:maxLength="20"
                android:singleLine="false"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/user_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="0"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:textColor="#404040"
                android:textSize="16sp" />




        </LinearLayout>

        <TextView
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/better_black"
            android:textSize="36sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>